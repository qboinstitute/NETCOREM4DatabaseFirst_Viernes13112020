@{ 
    List<Order> listado = (List<Order>)ViewBag.ListadoOrden;
    List<Customer> listadoCliente = (List<Customer>)ViewBag.ListadoCliente;
}

<table id="tbOrdenes" class="table table-striped">
    <thead>
        <tr>
            <th>Nro. Orden</th>
            <th>Fecha de Orden</th>
            <th>Cliente</th>
            <th>Monto Total</th>
            <th></th>

        </tr>
    </thead>

    <tbody>
        @foreach (Order item in listado)
        {
        <tr>
            <td>@item.OrderNumber</td>
            <td>@item.OrderDate.ToShortDateString()</td>
            <td>@listadoCliente.Where(x=>x.Id == item.CustomerId).FirstOrDefault().LastName</td>
            <td>@item.TotalAmount</td>
            <td></td>
        </tr>
        }
    </tbody>
</table>